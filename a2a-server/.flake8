[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    docs
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401
    # Ignore line too long in test files
    tests/*:E501
    # Ignore unused variables in test files
    tests/*:F841 